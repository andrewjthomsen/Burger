<div class="wrapper">
  <h1>Bernie's Burger Shack</h1>
    <!--create a for loop to loop through burgers eaten/not eaten-->
<h2>Burger Menu</h2>
<h5>Order before they disappear!</h5>
<ul id="burgers">
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{burger_name}}</li>
      <button data-id="{{id}}">Devour</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Out of Stock</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
     <li>{{burger_name}}</li>  
    {{/if}}
  {{/each}}
</ul>

<div class="burgersEaten"></div>
<div class="burgersNotEaten"></div>
<h2>Add a burger</h2>

  <form class="create-form">

  <div class="form-group">
    <label for="burgerOrder">Burger Name:</label>
    <input type="text" id="burgerOrder" name="name">
  </div>
<div>
  
</div>
  <button type="submit" id="add-burger-btn">Add Burger</button>
</form>
</div>
