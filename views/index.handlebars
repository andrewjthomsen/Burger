<h1>Burgers!</h1>

<h2>Welcome to the 50th Annual Burger Eating Contest!</h2>


<div class="burgers">
    <!--create a for loop to loop through burgers eaten/not eaten-->
<ul id="burgers">
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{burger_name}}</li>
      <button data-id="{{id}}">Devour</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>The burger has been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
     <li>{{burger_name}}</li>  
    {{/if}}
  {{/each}}
</ul>
</div>
<div class="burgersEaten"></div>
<div class="burgersNotEaten"></div>
<h2>Add a burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="burgerOrder">Burger Name:</label>
    <input type="text" id="burgerOrder" name="name">
  </div>

  <button type="submit" id="add-burger-btn">Add Burger</button>
</form>
